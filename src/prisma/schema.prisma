// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "darwin", "linux-musl", "debian-openssl-3.0.x"]
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Crate {
  id           Int     @id @default(autoincrement())
  address      String
  positionName String
  latitude     Float
  longitude    Float
  qrCodeId     Int?    @unique
  qrCode       QRCode? @relation(fields: [qrCodeId], references: [id])
}

model QRCode {
  id          Int           @id @default(autoincrement())
  hash        String        @unique
  crateId Int?
  crate   Crate?
  lootBoxes   LootBox[]
  scanHistory QRScanEvent[]
}

model Event {
  id        Int       @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  name      String?
  lootBoxes LootBox[]
}

model User {
  id                  Int       @id @default(autoincrement())
  email               String    @unique
  drawPrizeRegistered Boolean   @default(false)
  openedLootBoxes     LootBox[]
}

model LootBox {
  id         String    @id @default(uuid())
  isOpened   Boolean   @default(false)
  dateOpened DateTime?
  lootId     Int?
  loot       Loot?     @relation(fields: [lootId], references: [id])
  openedById Int?
  openedBy   User?     @relation(fields: [openedById], references: [id])
  eventId    Int
  event      Event     @relation(fields: [eventId], references: [id])
  qrCodeId   Int?
  qrCode     QRCode?   @relation(fields: [qrCodeId], references: [id])
}

model Loot {
  id                Int       @id @default(autoincrement())
  name              String    @unique
  displayName       String
  totalSupply       Int
  circulatingSupply Int
  lootBoxes         LootBox[]
}

model QRScanEvent {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  latitude  Float?
  longitude Float?
  qrCodeId  Int
  qrCode    QRCode   @relation(fields: [qrCodeId], references: [id])
}
